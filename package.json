{
  "name": "schedule-rehab-infrastructure",
  "version": "1.0.0",
  "description": "CDK infrastructure for schedule.rehab website",
  "main": "lib/schedule-rehab-stack.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "deploy:website": "cdk deploy ScheduleRehabStack",
    "deploy:bedrock": "cdk deploy BedrockScraperStack",
    "deploy:all": "cdk deploy --all",
    "destroy": "cdk destroy",
    "scrape:manual": "aws lambda invoke --function-name $(aws cloudformation describe-stacks --stack-name BedrockScraperStack --query 'Stacks[0].Outputs[?OutputKey==`ManualTriggerFunctionName`].OutputValue' --output text) response.json && cat response.json",
    "process:dharma": "node scripts/process-dharma-json.js"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "aws-cdk": "2.87.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "dependencies": {
    "@daypilot/daypilot-lite-javascript": "^4.3.0",
    "aws-cdk-lib": "2.87.0",
    "constructs": "^10.0.0"
  }
}
